# Bastion Host
az network public-ip create \
  --resource-group $HUBRGNAME \
  --name $BASTION_NAME'-PIP' \
  --sku Standard \
  --location $LOCATION
az network bastion create \
  --name $BASTION_NAME \
  --public-ip-address $BASTION_NAME'-PIP' \
  --resource-group $HUBRGNAME \
  --vnet-name $HUBVNET_NAME \
  --location $LOCATION \
  --scale-units 2

